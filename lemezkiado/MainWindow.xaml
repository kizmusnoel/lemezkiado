<Window x:Class="Lemezkiado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemezkiado"
        mc:Ignorable="d"
        Title="Lemezkiadó" Height="500" Width="830" MaxHeight="500" MaxWidth="830" MinHeight="500" MinWidth="830" Background="#264027" FontFamily="Lato" Foreground="White">
    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate"   
                 TargetType="Button">
            <Border Background="{TemplateBinding Background}"  
                  BorderBrush="{TemplateBinding BorderBrush}"  
                  BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  
                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled"  
             Value="False">
                    <Setter Property="Background"  
              Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground"  
              Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid>

        <Rectangle HorizontalAlignment="Left" Height="1" Margin="4,39,0,0" Stroke="#FFC857" VerticalAlignment="Top" Width="835"/>

        <Button Template="{StaticResource NoMouseOverButtonTemplate}" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave" Background="#6F732F" Name="btn1" BorderBrush="#FFC857" BorderThickness="3 0 3 0" Content="Új album felvétele" Click="newAlbumBtnClick" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="222" Height="40" Foreground="#FFFFECEC" FontWeight="Bold" HorizontalAlignment="Left" Margin="200,0,0,0"></Button>
        <Button Template="{StaticResource NoMouseOverButtonTemplate}" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave" Background="#6F732F" BorderBrush="#FFC857" Name="btn2" BorderThickness="3 0 3 0" Content="Keresés" Click="srcBtnClick" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="216" Height="40" Foreground="#FFFFECEC" FontWeight="Bold" HorizontalAlignment="Left" Margin="-10,0,0,0"></Button>


        <Button HorizontalAlignment="Left" Margin="767,6,0,0" VerticalAlignment="Top" Height="25" Width="26" Name="langBtn" Click="langBtnClick" Background="#FFC857">
            <Image Source="/img/language.png"/>
        </Button>

        <Grid Name="srcMenu" Height="500" Width="830">

            <TextBox TextChanged="srcBoxTextChanged" HorizontalAlignment="Left" Name="srcBox" Opacity="0.6" LostFocus="srcBoxLostFocus" GotFocus="srcBoxGotFocus" Margin="48,76,0,0" TextWrapping="Wrap" Text="Keresés albumok közt..." VerticalAlignment="Top" FontSize="20" Width="325" Height="30"/>

            <ListBox Name="albumsListBox" Margin="48,106,457,68" DisplayMemberPath="Display"
         SelectedValuePath="id" Background="#0D1F22" FontWeight="Bold" SelectionChanged="albumsListBoxSelected"/>
            <Label FontSize="15" Content="" Name="albumData" HorizontalAlignment="Left" Margin="415,78,0,0" VerticalAlignment="Top" Foreground="White"/>
            <ListBox Name="albumSongs" Margin="415,182,67,68" Background="#0D1F22" Visibility="Collapsed"/>
            <Button Content="Album törlése" Name="deleteAlbumBtn" Click="deleteAlbumBtnClick" HorizontalAlignment="Left" Margin="685,159,0,0" VerticalAlignment="Top" Visibility="Collapsed"/>

        </Grid>

        <Grid Height="370" Width="500" Name="newAlbumMenu" Margin="12,50,0,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Name="lbl1" Content="Új album felvétele" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
            <Label Name="lbl2" Content="Album neve: " FontWeight="Bold" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl3" Content="Előadó neve: " FontWeight="Bold" Grid.Row="2" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl4" Content="Megjelenés éve: " FontWeight="Bold" Grid.Row="3" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl5" Content="Ár: " FontWeight="Bold" Grid.Row="4" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl6" Content="Streamek: " FontWeight="Bold" Grid.Row="5" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl7" Content="Fizikai eladások: " FontWeight="Bold" Grid.Row="6" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl8" Content="Műfaj: " FontWeight="Bold" Grid.Row="7" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl9" Content="Explicit: " FontWeight="Bold" Grid.Row="8" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>
            <Label Name="lbl10" Content="Számok listája (vesszővel elválasztva): " FontWeight="Bold" Grid.Row="9" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16" Foreground="White"/>

            <TextBox Name="albumNameTXT" Grid.Row="1" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="artistNameTXT" Grid.Row="2" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="releaseDateTXT" Grid.Row="3" Margin="5,1,142,4" Grid.Column="1"/>
            <TextBox Name="priceTXT" Grid.Row="4" Margin="5,1,142,4" Grid.Column="1"/>
            <TextBox Name="streamsTXT" Grid.Row="5" Margin="5,1,65,4" Grid.Column="1"/>
            <TextBox Name="copiesSoldTXT" Grid.Row="6" Margin="5,1,65,4" Grid.Column="1"/>
            <TextBox Name="genreTXT" Grid.Row="7" Margin="5,1,65,4" Grid.Column="1"/>
            <WrapPanel Grid.Row="8" Grid.Column="1" VerticalAlignment="Center">
                <RadioButton Name="rbExplicitYes" Content="Igen" VerticalAlignment="Center" Foreground="White"/>
                <RadioButton x:Name="rbExplicitNo" Content="Nem" VerticalAlignment="Center" Foreground="White"/>
            </WrapPanel>
            <TextBox Name="trackListTXT" Grid.Row="9" FontSize="16" Margin="5,1,15,4" Grid.Column="1"/>
            <Button Name="updateBtn" Grid.Row="10" Grid.ColumnSpan="2" FontSize="20" Content="Felvétel" Margin="20,0,20,0" Click="updateBtnClick"/>
        </Grid>




    </Grid>
</Window>
