<Window x:Class="Lemezkiado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemezkiado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

        <Style x:Key="CleanButton" TargetType="Button">
            <Setter Property="Background" Value="#FF6446B9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <!-- The important part: clean template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>

                            <!-- Pressed effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.65"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFD173FF" Offset="0" />
            <GradientStop Color="#FF1C3B70" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>


        <Button  Content="Új album felvétele" Click="newAlbumBtnClick" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="20" FontFamily="Microsoft JhengHei UI" Width="222" Height="40" Foreground="#FFFFECEC" FontWeight="Bold" HorizontalAlignment="Left" BorderBrush="White" BorderThickness="0,0,2,2" Margin="221,0,0,0">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6446B9"/>
                    <GradientStop Color="#FF153071" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <Button  Content="Keresés" Click="srcBtnClick" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="20" FontFamily="Microsoft JhengHei UI" Width="221" Height="40" Foreground="#FFFFECEC" FontWeight="Bold" HorizontalAlignment="Left" BorderBrush="White" BorderThickness="0,0,2,2">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6446B9"/>
                    <GradientStop Color="#FF153071" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <Rectangle HorizontalAlignment="Left" Height="410" Margin="610,-202,0,0" Stroke="white" VerticalAlignment="Top" Width="74" RenderTransformOrigin="0.5,0.5" StrokeThickness="2">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFCB5CED" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Button HorizontalAlignment="Left" Margin="469,3,0,0" VerticalAlignment="Top" Height="29" Width="29">
            <Button.Content>
                <Image Source="/img/language.png"/>
            </Button.Content>

        </Button>
        <Grid Name="srcMenu" Height="450" Width="800" Visibility="Collapsed" >

            <TextBox TextChanged="srcBoxTextChanged" HorizontalAlignment="Left" Name="srcBox" Opacity="0.6" GotFocus="srcBoxGotFocus" Margin="48,76,0,0" TextWrapping="Wrap" Text="Keresés..." VerticalAlignment="Top" FontSize="20" Width="295" Height="30"/>

            <ListBox Name="albumsListBox" Margin="48,106,457,68" DisplayMemberPath="albumName"
         SelectedValuePath="id"/>

        </Grid>

        <Grid Height="370" Width="500" Name="newAlbumMenu" Margin="12,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Új album felvétele" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Album neve: " FontWeight="Bold" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="Eloado neve: " FontWeight="Bold" Grid.Row="2" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="megjelenes eve: " FontWeight="Bold" Grid.Row="3" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="ar: " FontWeight="Bold" Grid.Row="4" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="streamek: " FontWeight="Bold" Grid.Row="5" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="eladott masolatok: " FontWeight="Bold" Grid.Row="6" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="mufaj: " FontWeight="Bold" Grid.Row="7" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="explicit: " FontWeight="Bold" Grid.Row="8" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>
            <Label Content="szamok listaja (vesszovel elvalasztva): " FontWeight="Bold" Grid.Row="9" Grid.Column="0" HorizontalAlignment="right" VerticalAlignment="Center" FontSize="16"/>

            <TextBox Name="albumNameTXT" Grid.Row="1" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="artistNameTXT" Grid.Row="2" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="releaseDateTXT" Grid.Row="3" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="priceTXT" Grid.Row="4" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="streamsTXT" Grid.Row="5" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="copiesSoldTXT" Grid.Row="6" Margin="5,1,15,4" Grid.Column="1"/>
            <TextBox Name="genreTXT" Grid.Row="7" Margin="5,1,15,4" Grid.Column="1"/>
            <WrapPanel Grid.Row="8" Grid.Column="1" VerticalAlignment="Center">
                <RadioButton Name="rbExplicitYes" Content="Igen" VerticalAlignment="Center"/>
                <RadioButton x:Name="rbExplicitNo" Content="Nem" VerticalAlignment="Center"/>
            </WrapPanel>
            <TextBox Name="trackListTXT" Grid.Row="9" FontSize="16" Margin="5,1,15,4" Grid.Column="1"/>
            <Button Name="updateBtn" Grid.Row="10" Grid.ColumnSpan="2" FontSize="20" Content="Felvétel" Margin="20,0,20,0" Click="updateBtn_Click"/>
        </Grid>




    </Grid>
</Window>
